# ---------- GENERAL ---------- #

# Font
font pango:monospace 11

# Mod
set $Mod Mod4

# Restart i3 inplace
bindsym $Mod+Shift+r restart

# Reload the configuration file
bindsym $Mod+Shift+c reload

# ---------- BORDERS ---------- #

# Set border and title
for_window [class="^.*"] border pixel 2, title_format "<b> %class >> %title </b>"

# ---------- WINDOWS ---------- #

# Kill focused window
bindsym $Mod+Shift+q kill

# Floating windows
bindsym $Mod+space floating toggle
floating_modifier $mod

# Change focus
bindsym $Mod+Left  focus left
bindsym $Mod+Down  focus down
bindsym $Mod+Up    focus up
bindsym $Mod+Right focus right

# Move focused window
bindsym $Mod+Shift+Up    move up    
bindsym $Mod+Shift+Down  move down  
bindsym $Mod+Shift+Left  move left  
bindsym $Mod+Shift+Right move right 

# Change window size
bindsym Mod1+Shift+Up    resize shrink height 10 px or 1 ppt
bindsym Mod1+Shift+Down  resize grow   height 10 px or 1 ppt
bindsym Mod1+Shift+Left  resize shrink width  10 px or 1 ppt
bindsym Mod1+Shift+Right resize grow   width  10 px or 1 ppt

# Layout toggle, keycode 23 is Tab
bindcode Mod1+23 layout toggle tabbed split
bindcode $Mod+23 layout toggle splitv splith

# Switch to workspace with urgent window
for_window [urgent="latest"] focus
focus_on_window_activation   focus

# Split orientation
bindsym $Mod+h split h
bindsym $Mod+v split v
bindsym $Mod+q split toggle

default_orientation horizontal

# Container layout
bindsym $Mod+Shift+t layout tabbed
bindsym $Mod+Shift+s layout stacking
bindsym $Mod+Shift+h layout toggle split

# Toggle fullscreen mode
bindsym $Mod+f fullscreen toggle

# New window layout
new_window pixel 1
new_float  normal

hide_edge_borders none

# Changing border style
bindsym $Mod+n border normal
bindsym $Mod+y border pixel 1
bindsym $Mod+u border none

bindsym $Mod+shift+b border toggle

# ---------- APPLICATIONS ---------- #

# Run with reload
exec_always --no-startup-id al-polybar-session
exec_always --no-startup-id nitrogen --restore
exec_always --no-startup-id xrdb -load ~/.Xresources
exec_always --no-startup-id xfce4-power-manager
# gambiarra: killing compton because I hate it and still can't remove it
exec_always --no-startup-id killall compton
exec_always --no-startup-id nm-applet

# Run once
exec --no-startup-id xfsettingsd
exec --no-startup-id al-compositor --start
exec --no-startup-id volumeicon

# Enable numpad
exec_always --no-startup-id numlockx on

# Launch rofi
bindsym $Mod+d exec --no-startup-id rofi_run -r

# Cool applications
bindsym $Mod+F1          exec --no-startup-id exo-open --launch WebBrowser
bindsym $Mod+F2          exec --no-startup-id exo-open --launch FileManager
bindsym $Mod+Return     exec --no-startup-id exo-open --launch TerminalEmulator

# Logout script
bindsym $Mod+x exec --no-startup-id rofi_run -l

# Screenshot
bindsym Print exec --no-startup-id "scrot '%S.png' -e 'mv $f $$(xdg-user-dir PICTURES)/ArchLabs-%S-$wx$h.png ; feh $$(xdg-user-dir PICTURES)/ArchLabs-%S-$wx$h.png'"

# ---------- GAPS ---------- #

gaps inner 0
gaps outer 15

smart_gaps on

# ---------- WORKSPACES ---------- #

# Switch to workspace
bindsym $Mod+1 workspace 1
bindsym $Mod+2 workspace 2
bindsym $Mod+3 workspace 3
bindsym $Mod+4 workspace 4
bindsym $Mod+5 workspace 5
bindsym $Mod+6 workspace 6
bindsym $Mod+7 workspace 7
bindsym $Mod+8 workspace 8

# Switch to workspace - numpad alternatives
bindsym $mod+Mod2+KP_1 workspace 1
bindsym $mod+Mod2+KP_2 workspace 2
bindsym $mod+Mod2+KP_3 workspace 3
bindsym $mod+Mod2+KP_4 workspace 4
bindsym $mod+Mod2+KP_5 workspace 5
bindsym $mod+Mod2+KP_6 workspace 6
bindsym $mod+Mod2+KP_7 workspace 7
bindsym $mod+Mod2+KP_8 workspace 8

# Move focused container to workspace
bindsym $Mod+Shift+1 move container to workspace 1
bindsym $Mod+Shift+2 move container to workspace 2
bindsym $Mod+Shift+3 move container to workspace 3
bindsym $Mod+Shift+4 move container to workspace 4
bindsym $Mod+Shift+5 move container to workspace 5
bindsym $Mod+Shift+6 move container to workspace 6
bindsym $Mod+Shift+7 move container to workspace 7
bindsym $Mod+Shift+8 move container to workspace 8

# Move focused container to workspace - numpad alternatives
bindsym $Mod+Shift+Mod2+KP_End move container to workspace 1
bindsym $Mod+Shift+Mod2+KP_Down move container to workspace 2
bindsym $Mod+Shift+Mod2+KP_Next move container to workspace 3
bindsym $Mod+Shift+Mod2+KP_Left move container to workspace 4
bindsym $Mod+Shift+Mod2+KP_Begin move container to workspace 5
bindsym $Mod+Shift+Mod2+KP_Right move container to workspace 6
bindsym $Mod+Shift+Mod2+KP_Home move container to workspace 7
bindsym $Mod+Shift+Mod2+KP_Up move container to workspace 8

# ---------- BUTTONS ---------- #

# audio
bindsym XF86AudioPlay        exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext        exec --no-startup-id playerctl next
bindsym XF86AudioPrev        exec --no-startup-id playerctl previous
bindsym XF86AudioStop        exec --no-startup-id playerctl stop
bindsym XF86AudioMute        exec --no-startup-id pamixer -t
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 2
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 2

# backlight
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# ---------- COLORSCHEME ---------- #

# Xresources      var      value       fallback
set_from_resource $bg      background  #1c2023
set_from_resource $fg      foreground  #dde0e7
set_from_resource $color0  color0      #1c2023
set_from_resource $color1  color1      #75a8cc
set_from_resource $color2  color2      #9399ae
set_from_resource $color3  color3      #d3b39e
set_from_resource $color4  color4      #f1d4b5
set_from_resource $color5  color5      #a5b2cd
set_from_resource $color6  color6      #bac5dd
set_from_resource $color7  color7      #dde0e7

# class                 bd      bg  txt    ind   child_bd
client.focused          $color6 $bg $fg    $blue $grey
client.unfocused        $bg     $bg $fg    $bg   $bg
client.focused_inactive $bg     $bg $fb    $bg   $bg
client.urgent           $red    $bg $red   $red  $red
client.placeholder      $bg     $bg $bg    $bg   $bg
client.background       $bg
